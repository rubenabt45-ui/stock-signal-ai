
# Supabase Configuration (Required for full functionality)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Financial Data API (Optional - enhances market data features)
VITE_FMP_API_KEY=your_financial_modeling_prep_api_key

# Stripe Configuration (Required for payments)
VITE_STRIPE_SANDBOX=false

# Development Notes:
# - VITE_ prefixed variables are safe for client-side use
